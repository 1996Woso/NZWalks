@using NZWalks.UI.Models.DTO
@model RegionDTO
<div class="card">
	<div class="card-header text-center">
		<h5>Edit Region</h5>
	</div>
	<div class="card-body">
		<form method="post">
			<div class="mt-3">
				<label asp-for="Id" class="form-label"></label>
				<input asp-for="Id" class="form-control" readonly />
			</div>
			<div class="mt-3">
				<label asp-for="Code" class="form-label"></label>
				<input asp-for="Code" class="form-control" type="text" />
			</div>
			<div class="mt-3">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" type="text" />
			</div>
			<div class="mt-3">
				<label asp-for="RegionImageUrl" class="form-label">Image URL</label>
				<input asp-for="RegionImageUrl" class="form-control" type="text" />
			</div>
			<div class="mt-3">
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
			<div class="mt-3">
				<button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Regions">
					Delete
				</button>
			</div>
		</form>
	</div>
</div>
