@using NZWalks.UI.Models.DTO
@model IEnumerable<RegionDTO>

	<div class="container">
		<div class="d-flex justify-content-end">
			<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">
				Add Regions
			</a>
		</div>
		<div class="row">
			<div class="col-sm-12 text-center">
			<h5 class="mt-3">Regions</h5>
			</div>
		</div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Code</th>
				<th>Name</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var region in Model)
			{
				<tr>
					<td>@region.Id</td>
					<td>@region.Code</td>
					<td>@region.Name</td>
					<td>
						<a class="btn btn-light" asp-action="Edit" asp-controller="Regions" asp-route-id ="@region.Id">
							Edit
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	</div>



